
# Source Bash
alias srcp='source ~/.zshrc'
# good list
alias la='ls -FGlAhp'
# Open in VSCode
alias ca='code -a .'
# weather
alias weather='curl -4 http://wttr\.in'

# quick aliases for project navigation
if [ -d ~/Projects ]
  then for a in $(ls ~/Projects/); do alias $a="cd ~/Projects/$a && if [ -d ./.git ]; then git status; fi;"; done
fi               

alias light-term="sed -i '.bak' 's/hyper-gruvbox/hyper-papercolor/' /Users/timothyholmes/.hyper.js"
alias dark-term="sed -i '.bak' 's/hyper-papercolor/hyper-gruvbox/' /Users/timothyholmes/.hyper.js"
